import javax.swing.JTextField;
import javax.swing.JLabel;
import javax.swing.JMenuBar;
import java.awt.Dimension;
import javax.swing.JMenu;

public class MaPremiereFenetre {

	private JFrame frame;
	private JTextField textField;
	private JMenuBar MaBarre;
	private JMenu mnNewMenu;

	/**
	 * Launch the application.
	 */
	public static void main(String[] args) {
		EventQueue.invokeLater(new Runnable() {
			public void run() {
				try {
					MaPremiereFenetre window = new MaPremiereFenetre();
					window.frame.setVisible(true);
				} catch (Exception e) {
					e.printStackTrace();
				}
			}
		});
	}

	/**
	 * Create the application.
	 */
	public MaPremiereFenetre() {
		initialize();
	}

	/**
	 * Initialize the contents of the frame.
	 */
	private void initialize() {
		frame = new JFrame();
		frame.setBounds(100, 100, 450, 300);
		frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		frame.getContentPane().setLayout(null);
		
		JButton btnOK = new JButton("OK");
		btnOK.addActionListener(new ActionListener() {
			public void actionPerformed(ActionEvent e) {
			}
		});
		btnOK.setBounds(259, 54, 85, 21);
		frame.getContentPane().add(btnOK);
		
		textField = new JTextField("prenom");
		textField.setBounds(153, 55, 96, 19);
		frame.getContentPane().add(textField);
		textField.setColumns(10);
		
		JLabel lblprenom = new JLabel("Entrez votre Pr√©nom");
		lblprenom.setBounds(40, 58, 103, 13);
		frame.getContentPane().add(lblprenom);
		
		MaBarre = new JMenuBar();
		MaBarre.setPreferredSize(new Dimension(0, 25));
		MaBarre.setBounds(20, 0, 57, 22);
		frame.getContentPane().add(MaBarre);
		
		mnNewMenu = new JMenu("Fichier");
		MaBarre.add(mnNewMenu);
	}
}
